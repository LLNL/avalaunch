#!/bin/bash

set -x

export PATH=`pwd`/autotools/install/bin:$PATH

export CFLAGS="-g -O0"

#autoreconf --install --force
#exit 0

installdir=`pwd`/install

rm -rf $installdir

if [ ! -d spawnnet ] ; then
  wget https://github.com/hpc/spawnnet/releases/download/v0.1/spawnnet-0.1.tar.gz
  tar -zxf spawnnet-0.1.tar.gz
  mv spawnnet-0.1 spawnnet
  pushd spawnnet
    ./configure \
      --prefix=`pwd`/install \
      --disable-silent-rules
    make
    make install
  popd
fi

#./configure \
#  --prefix=$installdir \
#  --disable-silent-rules \
#  --with-spawnnet=`pwd`/spawnnet/install
#exit 0

make clean

make

make VERBOSE=1 V=1 install

pushd src/new/examples
  make
popd
